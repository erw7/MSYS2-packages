# Maintainer: erw7 <erw7.github@gmail.com>

pkgname=libtermkey
pkgver=0.22
pkgrel=1
pkgdesc='Library for easy processing of keyboard entry from terminal-based programs'
arch=('i686' 'x86_64')
license=('MIT')
dependes=('unibilium')
url='http://www.leonerd.org.uk/code/libtermkey'
source=("http://www.leonerd.org.uk/code/${pkgname}/${pkgname}-${pkgver}.tar.gz")
md5sums=('08bf514d59660391c3a21b3977a16c8c')

build() {
  cd ${pkgname}-${pkgver}
  LDFLAGS="${LDFLAGS} -no-undefined" make PREFIX=/usr
}

package() {
  cd ${pkgname}-${pkgver}
  make DESTDIR=${pkgdir} PREFIX=/usr install
}

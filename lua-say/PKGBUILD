# Maintainer: erw7 <erw7.github@gmail.com>

pkgbase=say
pkgname=luajit-say
pkgver=1.3_1
pkgrel=1
pkgdesc="Lua String Hashing/Indexing Library"
arch=('any')
license=('MIT')
url='http://olivinelabs.com/busted/'
depends=(luajit)
source=("https://github.com/Olivine-Labs/say/archive/v${pkgver//_/-}.tar.gz")
md5sums=('dff667076b16b5b190cb495076345636')

package() {
  cd ${pkgbase}-${pkgver//_/-}
  install -Dm644 src/init.lua \
    -t ${pkgdir}/`pkg-config --variable=INSTALL_LMOD luajit`/${pkgbase}/
  install -Dm644 LICENSE -t ${pkgdir}/usr/share/licenses/${pkgname}/
}

# Maintainer: erw7 <erw7.github@gmail.com>

pkgname=('libxdmcp' 'libxdmcp-devel')
pkgver=1.1.3
pkgrel=1
arch=('i686' 'x86_64')
license=('custom')
url="https://xorg.freedesktop.org/"
makedepends=('xorg-util-macros' 'xorgproto')
source=(${url}/releases//individual/lib/libXdmcp-${pkgver}.tar.bz2)
sha256sums=('20523b44aaa513e17c009e873ad7bbc301507a3224c232610ce2e099011c6529')

prepare() {
  cd libXdmcp-${pkgver}
  autoreconf -fvi
}

build() {
  cd libXdmcp-${pkgver}
  ./configure \
  --prefix=/usr \
  --build=${CHOST}
  make -j13
  make DESTDIR=${srcdir}/dest install
}

package_libxdmcp() {
  pkgdesc="X11 Display Manager Control Protocol library"
  groups=('libraries')

  install -Dm755 ${srcdir}/dest/usr/bin/* -t ${pkgdir}/usr/bin
  install -Dm644 ${srcdir}/dest/usr/share/doc/libXdmcp/xdmcp.xml \
    -t ${pkgdir}/usr/share/doc/libXdmcp/
  install -Dm644 "${srcdir}"/${pkgname}-${pkgver}/COPYING \
    -t "${pkgdir}"/usr/share/licenses/${pkgname}/
}

package_libxdmcp-devel() {
  pkgdesc="LibXdmcp headers and libraries"
  group=('development')
  depends=("libxdmcp=${pkgver}")

  install -Dm644 ${srcdir}/dest/usr/include/X11/Xdmcp.h \
    -t ${pkgdir}/usr/include/X11/
  install -Dm644 ${srcdir}/dest/usr/lib/libXdmcp* \
    -t ${pkgdir}/usr/lib/
  install -Dm644 ${srcdir}/dest/usr/lib/pkgconfig/xdmcp.pc \
    -t ${pkgdir}/usr/lib/pkgconfig/
  }
